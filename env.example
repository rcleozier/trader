# Kalshi Configuration
KALSHI_API_BASE_URL=https://api.elections.kalshi.com/trade-api/v2
KALSHI_API_KEY_ID=your_kalshi_api_key_id
# Option 1: Provide private key as PEM string (use \n for newlines, wrap in quotes)
KALSHI_PRIVATE_KEY_PEM="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
# Option 2: Or provide path to private key file
# KALSHI_PRIVATE_KEY_PATH=/path/to/private-key.pem

# ESPN Configuration
ESPN_API_BASE_URL=https://site.api.espn.com/apis/site/v2/sports/basketball/nba

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890
ALERT_TO_NUMBER=+1234567890

# Bot Configuration
MISPRICING_THRESHOLD_PCT=0.05
MID_EDGE_THRESHOLD_PCT=0.03
RUN_SCHEDULE_CRON=*/5 * * * *

# Trading Configuration (Optional - for automatic trading)
LIVE_TRADES=false
MIN_BALANCE_TO_BET=10
MAX_BET_SIZE=50
# BET_SIZE=5  # Optional: fixed bet size in dollars (overrides MAX_BET_SIZE)

# Email Configuration (Optional - for email reports)
# Option 1: Use your own email account via SMTP (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=your_email@gmail.com

# Option 2: Use SendGrid (alternative to SMTP)
# SEND_GRID=your_sendgrid_api_key
# EMAIL_ADDRESS=your_email@example.com
